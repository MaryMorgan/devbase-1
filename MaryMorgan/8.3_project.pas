procedure Yeti;
var
    choise: Integer;
begin
    writeln('Йети.');
    writeln('Выбери действие: 1 бежать, 2 прятаться, 3 прикормить.');
    readln(choise);
    
    case choise of
    1: begin
        writeln('Ты убежал, но устал.');
        fatigue:=fatigue+2;
        CurHeight:=CurHeight+100;
       end;
    2: begin
        writeln('Ты спрятался, но не продвинулся в пути. Зато это отличный шанс сделать уникальную фоточку.');
        YetiFoto:=true;
       end;
    3: begin
        if (foodPacks>0) then
        begin
            YetiFoto:=true;
            fatigue:=fatigue-1;
            CurHeight:=CurHeight+100;
            writeln('Ты прикормил Йети. Это отличный шанс сделать уникальную фоточку.');
        end
        else
        begin
            writeln('Тебе не удалось прикормить Йети. Пришлось бежать.');
            fatigue:=fatigue+2;
            CurHeight:=CurHeight+100;
        end;
       end;
    else
    begin
        writeln('Ошеломленный твоим нонкоформизмом, Йети впал в оцепенение на час. Продолжай свой путь, маленький бунтарь!.');
        writeln('Ну и фото на память, конечно.');
        YetiFoto:=true;
        CurHeight:=CurHeight+100;
        end;
    end;
end;

